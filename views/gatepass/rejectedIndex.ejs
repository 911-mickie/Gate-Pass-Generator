<%- layout('layouts/boilerplate') %>

    <div class="mt-3 mb-3">
        <h1>All Rejected Gatepasses</h1>
    </div>


    <% for(let pass of gatepass) {%>

        <div class="row">
            <div class="col-sm-6">
                <div class="card border-dark mb-3 text-center" style="max-width: 18rem;">
                    <div class="card-header">Visitor</div>
                    <div class="card-body text-dark">
                        <h5 class="card-title">
                            <%= pass.name %>
                        </h5>
                        <p class="card-text">
                            <%= pass.purpose %>
                        </p>

                        <a class="btn btn-info" href="/rejected/<%= pass._id %>" role="button">Show</a>
                    </div>
                </div>
            </div>
        </div>

        <% } %>